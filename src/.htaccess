# Option to follow symbolic links. -FollowSymLinks switches it off
Options +FollowSymLinks
# URL rewriting does not work without this setting:
RewriteEngine On

# Check if your url is localhost or a real domain. Handy for restricting access to certain documents or directories
RewriteCond %{HTTP_HOST} !^localhost$
RewriteCond %{HTTP_HOST} !^127.0.0.1$
RewriteRule ^api-key.php$ /index.php

# You can override PHP settings for the directory this file is placed in, e.g.
php_value  upload_max_filesize  10M

